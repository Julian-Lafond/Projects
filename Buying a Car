class Loan:
    def __init__(self,interest,years,amount,borrower):
        self.__interest = interest
        self.__years = years
        self.__amount = amount
        self.__borrower = borrower
    def getinterest(self):
        return self.__interest
    def getyears(self):
        return self.__years
    def getamount(self):
        return self.__amount
    def getborrower(self):
        return self.__borrower
    def setinterest(self,newinterest):
        self.__interest = newinterest
    def setyears(self,newyears):
        self.__years = newyears
    def setamount(self,newamount):
        self.__amount = newamount
    def setborrower(self,newborrower):
        self.__borrower = newborrower
    def getMonthlyPayment(self):
        monthlyPayment = ((self.__amount * self.__interest/1200) / (1-(1/(1+self.__interest/1200)**(self.__years*12))))
        return monthlyPayment
    def getTotalPayment(self):
        totalPayment = float(self.getMonthlyPayment()) * self.__years * 12
        return totalPayment
    def printLoanInfo(self):
        monthlyPayment = self.getMonthlyPayment()
        totalPayment = self.getTotalPayment()
        print('The loan is for', self.getborrower())
        print('The monthly payment is', "{:.2f}".format(monthlyPayment))
        print('The total payment is', "{:,.2f}".format(totalPayment))
    




def main():
    '''This function prints the name,monthly payment, and total payment'''
    interest = float(input("Enter the yearly interest rate: "))
    years = float(input("Enter number of years as an integers: "))
    amount = float(input("Enter loan amount: "))
    borrower = input("Enter a borrower's name: ")
    total = Loan(interest,years,amount,borrower)
    total.printLoanInfo()
    change = input("Do you want to change the loan amount? Y for yes or enter to quit")
    if change == 'Y' or change == 'y':
        newloan = float(input("Enter new loan amount "))
        total.setamount(newloan)
        total.getMonthlyPayment()
        total.getTotalPayment()
        total.printLoanInfo()
    else:
        print('No new loan')


if __name__=="__main__":
    main()


